<div class="container">
    <div class="row">
  
     <div class="container py-2 mt-5">
     <div class="card-product">


      <div class="d-flex gap-2 justify-content-between mx-5 mb-5">

        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @listing.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= image_tag photo.image.url, class: 'd-block w-100' if photo.image.present? %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>


        </div>
        <div class="card-product-infos ">
            <h1><%= @listing.title %></h1>
            <p><%= @listing.description %></p>

          <p>
          <i class="fa-solid fa-location-dot"></i>
          <%= @listing.address %></p>
          <p>
          <i class="fa-solid fa-map "></i>
            lat : <%= @listing.latitude if @listing.latitude.present? %>,
            lng : <%= @listing.longitude if @listing.longitude.present? %></p>

            <% if @listing.published? %>
            <p  class="fw-bold ">
            <i class="fa-regular fa-circle-check text-success fw-bold fs-5 mr-2 "></i>
            <%= @listing.status.capitalize %></p>
            <% else %>
            <p  class="fw-bold">
              <i class="fa-regular fa-clock text-warning fw-bold fs-5 "></i>
            <%= @listing.status.capitalize %></p>
            <% end %>

            
            <p class="fw-bold">Price/Night: <span class="fs-6"><%= number_to_currency(@listing.nightly_price / 100, unit: '€', precision: 0 ) %></span></p>  
            <p class="fw-bold">Cleaning Fee: <span class="fs-6"><%= number_to_currency(@listing.cleaning_fee / 100, unit: '€', precision: 0) %></span></p>

            
            <h6>Rooms: <%= @listing.rooms.count%></h6>
            <h6> Host:  <%= @listing.host.email%></h6>
              


        </div>
      </div>
    </div>

  <%= link_to 'reserve', new_listing_reservation_path(listing_id: @listing), class: 'btn btn-primary'%>

  <%= link_to 'Back to listings', host_listings_path %>


    
</div>
 </div>
  
  </div>

