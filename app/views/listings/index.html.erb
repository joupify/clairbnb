<%== pagy_nav(@pagy) if @pagy.pages > 1 %>

<h1>Listings </h1>
<ul>
<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">Customers also reserved</h2>

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
    <% @listings.each do |listing| %>

      <div class="group relative">
        
        <a href =" listing_path(listing)", class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
                <%= image_tag "house1.png", class:"h-full w-full object-cover object-center lg:h-full lg:w-full" %>
          
        </a>
        <div class="mt-4 flex justify-between ">
          <div>
            <h3 class="text-sm text-gray-700">
          <%= link_to listing.title, listing_path(listing), class:"text-dark fs-text-decoration-none" %>
                <span aria-hidden="true" class="absolute inset-0 fs-4"></span>
            </h3>
            
        <p class="fw-bold">Price/Night: <span class="fs-5"><%= number_to_currency(listing.nightly_price / 100, unit: 'â‚¬', precision: 0 ) %></span></p>  


          </div>
          <p class="text-sm font-medium text-gray-900"><%= listing.city %></p>
        </div>
      </div>
      <!-- More products... -->
      <% end %>

    </div>
  </div>
</div>


</ul>
<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
