        <th>Check-out</th>
        <th>Total Price</th>
        <th>Cleaning Fee</th>
        <th>Nights</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>

      <% @host_reservations.each do |reservation| %>
