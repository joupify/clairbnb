<div class="container py-2">

  <h2>Rooms</h2>
  <div class="container d-flex gap-3">

  <% if @listing.rooms.present? %>
    <% @listing.rooms.each do |room| %>
      <div class="d-flex">
        <div class="d-flex gap-3">
          <div class="card mb-3">
            <div class="card-header">
              <h3><%= room.room_type %></h3>
              <h6 >Number of beds: <span class="bg-success fs-5 p-2 rounded-circle"><%= room.beds.count %></span></h6>

              
            </div>
            <% if room.beds.present? %>
              <div class="card-body">
                <h4>Beds</h4>
                <ul class="list-group">

                  <% room.beds.each do |bed| %>
                    <li class="list-group-item"><%= bed.bed_size %></li>

                  <% end %>
                </ul>
              </div>
            <% else %>
              <div class="card-body">
                <p>No beds in this room.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No rooms available for this listing.</p>
  <% end %>
</div>

</div>


<div class="container py-2 ">
  <%= render 'host/rooms/form', listing: @listing %>
<br>
<%= link_to 'Edit', edit_host_listing_path(@listing) %>
</div>
