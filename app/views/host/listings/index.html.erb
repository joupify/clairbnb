<%# app/views/listings/index.html.erb %>
<div class='container py-4 mt-3'>
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class='fw-bolder mb-0'>Your Listings</h1>
    <%= link_to "Add New Listing", new_host_listing_path, class: "btn btn-dark px-4 py-2" %>
  </div>
  
  <% if @listings.present? %>
    <div class="row g-4">
<%= render partial: 'listing', collection: @listings.includes(:reservations), as: :listing %>
    </div>
  <% else %>
    <div class="alert alert-info">
      You don't have any listings yet.
    </div>
    <div class="text-center mt-4">
      <%= link_to "Create your first listing", new_host_listing_path, class: "btn btn-dark px-4 py-2" %>
    </div>
  <% end %>
</div>