<%= turbo_stream.append [@message.reservation, :messages] do %>
  <%= render partial: "message", locals: { message: @message } %>

  <%= render partial: "shared/flash", locals: { flash: flash } %>
<% end %>

<%= turbo_stream.replace 'message_form' do %>
  <%= render partial: 'messages/form', locals: { reservation: @reservation, message: Message.new } %>
<% end %>