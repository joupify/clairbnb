<div id="message_<%= message.id %>">
  <div>
    <ul>
      <li>
        <div>
          <div>
            <a href="#"><%= message.from_user.email %></a>
            <p>Sent <%= time_ago_in_words(message.created_at) %> ago</p>
            <p><%= message.content %></p>
            <% if message&.notifications_as_message&.first&.read_at %>
              <p>Read <%= time_ago_in_words(message&.notifications_as_message&.first&.read_at) %></p>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
