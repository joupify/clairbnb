
<%= form_with(model: [@reservation, @message], url: listing_reservation_messages_path(@reservation.listing, @reservation), method: :post) do |form| %>



  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :reservation_id, value: @reservation.id %>
  <div class="field">
     <%= form.label :content, 'Add Your Message:', class:'w-100 mb-2' %>
    <%= form.text_area :content, class:'form-control' %>
  </div>
  
  <div class="actions">
    <%= form.submit "Send Message", class:'btn btn-primary mt-2' %>
  </div>
<% end %>